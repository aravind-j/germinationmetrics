citHeader("To cite the R package 'germinationmetrics' in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("germinationmetrics")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
if (!length(year)) {
 year <- format(packageDate("germinationmetrics"), "%Y")
}
vers <- paste("R package version", meta$Version)

citEntry(entry  = "Manual",
         title  = "germinationmetrics: Seed Germination Indices and Curve Fitting",
         author = personList(person(c("Aravind", "J"),
                                    email = "j.aravind@icar.gov.in",
                                    role = c("aut", "cre")),
							 person(c("Vimala Devi", "S"),
                                    email = "vimala.devi@icar.gov.in", role = "aut"),
                             person(c("Radhamani", "J"),
                                    email = "jalli.radhamani@icar.gov.in", role = "aut"),
							 person(c("Sherry", "Rachel", "Jacob"),
                                    email = "sherry.jacob@icar.gov.in", role = "aut"),
                             person(c("Kalyani", "Srinivasan"),
                                    email = "kalyani.srinivasan@icar.gov.in", role = "aut")),
         year = year,
         textVersion = paste(
           "J. Aravind, S. Vimala Devi, J. Radhamani, Sherry Rachel Jacob and Kalyani Srinivasan (",
           year, ").  germinationmetrics: Seed Germination Indices and Curve Fitting. ",
           vers, ", ", "https://cran.r-project.org/package=germinationmetrics, https://doi.org/10.5281/zenodo.1219630",
           ".", sep=""),
         note = {c(paste(vers), "https://cran.r-project.org/package=germinationmetrics", "https://doi.org/10.5281/zenodo.1219630")})

citFooter("This free and open-source software implements academic
research by the authors and co-workers. If you use it, please support
the project by citing the package.")
